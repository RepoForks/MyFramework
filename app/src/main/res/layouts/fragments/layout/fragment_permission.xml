<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.kevadiyak.myframework.viewmodels.PermissionFragmentViewModel"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center_horizontal">

            <Button
                android:text="Single"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:textColor="@android:color/white"
                android:textAppearance="?android:textAppearanceMedium"
                android:onClick="@{v -> viewModel.onSingle(v)}" />

            <Button
                android:text="Multiple"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:textColor="@android:color/white"
                android:textAppearance="?android:textAppearanceMedium"
                android:onClick="@{v -> viewModel.onMultiple(v)}" />

            <Button
                android:text="Each"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:textColor="@android:color/white"
                android:textAppearance="?android:textAppearanceMedium"
                android:onClick="@{v -> viewModel.onEach(v)}" />

            <Button
                android:text="Ensure"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:textColor="@android:color/white"
                android:textAppearance="?android:textAppearanceMedium"
                android:onClick="@{v -> viewModel.onEnsure(v)}" />

            <Button
                android:text="Ensure Each"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:textColor="@android:color/white"
                android:textAppearance="?android:textAppearanceMedium"
                android:onClick="@{v -> viewModel.onEnsureEach(v)}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.message}"
                android:textColor="@android:color/black"
                android:textAppearance="?android:textAppearanceMedium" />
        </LinearLayout>

    </ScrollView>

</layout>